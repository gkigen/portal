<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

  <% if @student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mentor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mentor_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mentor_id) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :sex, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sex, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sex) %>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :age, :class => 'form-control' %>
    </div>
    <%=f.error_span(:age) %>
  </div>
  <div class="form-group">
    <%= f.label :DOB, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :DOB, :class => 'form-control' %>
    </div>
    <%=f.error_span(:DOB) %>
  </div>
  <div class="form-group">
    <%= f.label :current_school, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :current_school, :class => 'form-control' %>
    </div>
    <%=f.error_span(:current_school) %>
  </div>
  <div class="form-group">
    <%= f.label :current_level, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :current_level, :class => 'form-control' %>
    </div>
    <%=f.error_span(:current_level) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country) %>
  </div>
  <div class="form-group">
    <%= f.label :sat_score, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sat_score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sat_score) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
